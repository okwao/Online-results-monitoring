<%- model_class = Grade -%>
<div class="page-header row">
  <div class="col-md-6 col-sm-6 col-lg-6">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>

  <div  class="col-md-6 col-sm-6 col-lg-6" style="text-align:right;">
    <p style="margin-top:15px;"><%= link_to t('.new', :default => t("helpers.links.new")),
              new_grade_path,
              :class => 'btn btn-primary' %></p>
  </div>
  
   

</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:grade_number) %></th>
    <!--  <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= link_to grade.id, grade_path(grade) %></td>
        <td><%= grade.grade_number %></td>
      <!--  <td><%=l grade.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_grade_path(grade), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      grade_path(grade),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


