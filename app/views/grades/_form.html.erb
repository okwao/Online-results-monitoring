<%= form_for @grade, :html => { :class => "form-horizontal grade" } do |f| %>

    <% if @grade.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @grade.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :grade_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :grade_number, :class => 'form-control' %>
    </div>
    <%= error_span(@grade[:grade_number]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            grades_path, :class => 'btn btn-default' %>

<% end %>
