<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @student.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @student.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @student.date_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade_number) %>:</strong></dt>
  <dd><%= @student.grade_number %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
              

<table class="table table-striped" style="margin-top:30px;">
  <thead>
    <tr>
    <!--  <th><%= model_class.human_attribute_name(:id) %></th> -->
    <!--  <th><%= model_class.human_attribute_name(:student_id) %></th> -->
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:marks) %></th>
    </tr>
  </thead>  
  <tbody>
    <% @results.each do |result| %>
      <tr>
      <!--  <td><%= result.id %></td> -->
      <!--  <td><%= result.student.full_name %></td> -->
        <td><%= result.course.course_name %></td>
        <td><%= result.marks %></td>
      </tr>
    <% end %>
</tbody>
</table>

