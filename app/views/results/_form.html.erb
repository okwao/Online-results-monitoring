<%= form_for [@classroom, @result], :html => { :class => "form-horizontal result" } do |f| %>

    <% if @result.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @result.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :student_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :student_id, :class => 'form-control' %>
    </div>
    <%= error_span(@result[:student_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :course_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :course_id, :class => 'form-control' %>
    </div>
    <%= error_span(@result[:course_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :marks, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :marks, :class => 'form-control' %>
    </div>
    <%= error_span(@result[:marks]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            results_path, :class => 'btn btn-default' %>

<% end %>
